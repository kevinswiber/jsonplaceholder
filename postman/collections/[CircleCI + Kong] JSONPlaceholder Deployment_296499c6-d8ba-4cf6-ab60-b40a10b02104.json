{
    "info": {
        "_postman_id": "b66f14c7-b43e-4e16-9ca6-f550f059799f",
        "name": "[CircleCI + Kong] JSONPlaceholder Deployment",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Initialize",
            "item": [
                {
                    "name": "Get OpenAPI Definition",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "id": "6d471495-bdea-4ddc-9920-bdd7e8758b29",
                                "exec": [
                                    "pm.test('status code is 200', () => {",
                                    "  pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "const response = pm.response.json();",
                                    "",
                                    "pm.test('response has schema', () => {",
                                    "  pm.expect(response.schema.schema).to.exist;",
                                    "});",
                                    "",
                                    "pm.collectionVariables.set('openapi', JSON.stringify(response.schema.schema));"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "id": "7f603fc9-1775-481a-abab-338148732639",
                    "protocolProfileBehavior": {
                        "disableBodyPruning": true
                    },
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{postmanAPIKey}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "https://api.getpostman.com/apis/{{apiId}}/versions/{{apiVersionId}}/schemas/{{schemaId}}",
                            "protocol": "https",
                            "host": [
                                "api",
                                "getpostman",
                                "com"
                            ],
                            "path": [
                                "apis",
                                "{{apiId}}",
                                "versions",
                                "{{apiVersionId}}",
                                "schemas",
                                "{{schemaId}}"
                            ]
                        }
                    },
                    "response": []
                }
            ],
            "id": "e5bbb7e7-4f97-4d8d-b3ef-96c8c68ebeac"
        },
        {
            "name": "Run",
            "item": [
                {
                    "name": "OpenAPI to Kong",
                    "item": [
                        {
                            "name": "Convert OpenAPI to Kong Config",
                            "event": [
                                {
                                    "listen": "prerequest",
                                    "script": {
                                        "id": "b5bcdb62-c5a1-40ee-bba7-b83a8a200be6",
                                        "exec": [
                                            "const openapi = pm.variables.get('openapi');",
                                            "",
                                            "if (openapi) {",
                                            "  pm.variables.set('openapi', JSON.parse(openapi));",
                                            "}"
                                        ],
                                        "type": "text/javascript"
                                    }
                                }
                            ],
                            "id": "d498be89-5265-4a1b-8a1d-7c4022cbfc5b",
                            "protocolProfileBehavior": {
                                "disableBodyPruning": true
                            },
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "text/yaml",
                                        "type": "text"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{{openapi}}",
                                    "options": {
                                        "raw": {
                                            "language": "text"
                                        }
                                    }
                                },
                                "url": {
                                    "raw": "{{o2kBaseUrl}}/converter",
                                    "host": [
                                        "{{o2kBaseUrl}}"
                                    ],
                                    "path": [
                                        "converter"
                                    ]
                                }
                            },
                            "response": []
                        }
                    ],
                    "id": "58207477-43ca-45a3-b3eb-4d9e8faccf73",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "id": "1ab9ebf9-034d-4c39-97ae-9e8d05273c16",
                                "type": "text/javascript",
                                "exec": [
                                    "const spec = `openapi: 3.0.3",
                                    "info:",
                                    "  version: 1.0.0",
                                    "  title: \"[CircleCI + Kong] JSON Placeholder\"",
                                    "  description: See https://jsonplaceholder.typicode.com/",
                                    "  x-kubernetes-ingress-metadata:",
                                    "    name: json-placeholder",
                                    "servers:",
                                    "  - url: https://jsonplaceholder.typicode.com/",
                                    "    description: JSON Placeholder",
                                    "    x-kubernetes-service:",
                                    "      metadata:",
                                    "        name: json-placeholder-svc",
                                    "paths:",
                                    "  /posts:",
                                    "    x-kong-plugin-key-auth:",
                                    "      name: key-auth",
                                    "      enabled: true",
                                    "      config:",
                                    "        key_names: [api_key, apikey]",
                                    "        key_in_body: false",
                                    "        hide_credentials: true",
                                    "    get:",
                                    "      description: Returns all posts",
                                    "      tags: [\"Posts\"]",
                                    "      operationId: \"getPosts\"",
                                    "      responses:",
                                    "        \"200\":",
                                    "          description: Successful response",
                                    "          content:",
                                    "            \"application/json\":",
                                    "              schema:",
                                    "                $ref: \"#/components/schemas/PostsList\"",
                                    "",
                                    "  /posts/{id}:",
                                    "    get:",
                                    "      description: Returns a post by id",
                                    "      tags: [\"Posts\"]",
                                    "      operationId: \"getPost\"",
                                    "      parameters:",
                                    "        - name: id",
                                    "          in: path",
                                    "          required: true",
                                    "          description: The user id.",
                                    "          schema:",
                                    "            type: integer",
                                    "            format: int64",
                                    "      responses:",
                                    "        \"200\":",
                                    "          description: Successful response",
                                    "          content:",
                                    "            \"application/json\":",
                                    "              schema:",
                                    "                $ref: \"#/components/schemas/Post\"",
                                    "        \"404\":",
                                    "          description: Post not found",
                                    "",
                                    "components:",
                                    "  schemas:",
                                    "    PostsList:",
                                    "      \"type\": \"array\"",
                                    "      \"items\":",
                                    "        $ref: \"#/components/schemas/Post\"",
                                    "    Post:",
                                    "      \"type\": \"object\"",
                                    "      \"required\":",
                                    "        - \"id\"",
                                    "        - \"userId\"",
                                    "        - \"title\"",
                                    "        - \"completed\"",
                                    "      \"properties\":",
                                    "        id:",
                                    "          type: \"integer\"",
                                    "        userId:",
                                    "          type: \"integer\"",
                                    "        title:",
                                    "          type: \"string\"",
                                    "        completed:",
                                    "          type: \"string\"",
                                    "`;",
                                    "",
                                    "console.log(pm.variables.get('openapi'));",
                                    "",
                                    "if (!pm.variables.get('openapi')) {",
                                    "  pm.variables.set('openapi', JSON.stringify(spec));",
                                    "}"
                                ]
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "id": "a73b785c-187b-4e81-90a5-7c0a08383099",
                                "type": "text/javascript",
                                "exec": [
                                    ""
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Kubernetes",
                    "item": [
                        {
                            "name": "Test Kubernetes API Access",
                            "id": "d03e351b-59c9-4fc6-b473-e096a87ccc7a",
                            "protocolProfileBehavior": {
                                "disableBodyPruning": true
                            },
                            "request": {
                                "method": "GET",
                                "header": [],
                                "url": {
                                    "raw": "{{kubeBaseUrl}}/api",
                                    "host": [
                                        "{{kubeBaseUrl}}"
                                    ],
                                    "path": [
                                        "api"
                                    ]
                                }
                            },
                            "response": []
                        }
                    ],
                    "id": "793b6226-c025-4b71-ab37-2ceac5a0829d",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "id": "607fd7c7-0958-4c27-98bd-2ac3a4a1e3f8",
                                "type": "text/javascript",
                                "exec": [
                                    "const token = pm.variables.get('token');",
                                    "if (token) {",
                                    "  pm.request.addHeader(`Authorization: Bearer ${token}`);",
                                    "}"
                                ]
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "id": "fb00c2dd-748c-4c7f-96db-a5d258c438c6",
                                "type": "text/javascript",
                                "exec": [
                                    ""
                                ]
                            }
                        }
                    ]
                }
            ],
            "id": "ee319657-77d7-45e4-98fd-f23b377cd16f"
        }
